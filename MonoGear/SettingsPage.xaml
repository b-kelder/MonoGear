<Page
    x:Class="MonoGear.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonoGear"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="backButton" HorizontalAlignment="Left" Margin="1600,945,0,0" VerticalAlignment="Top" Height="51" Width="215" Click="BackButton_Click">
            <Image Source="Assets/back.png" Margin="-51,-6,-50,-6"/>
        </Button>
        <TextBlock x:Name="textBlock" 
                   FontFamily="Arial" 
                   FontStyle="Italic"
                   FontWeight="Bold"
                   FontSize="45"
                   HorizontalAlignment="Left" 
                   Margin="93,78,0,0" 
                   TextWrapping="Wrap" 
                   Text="Settings" 
                   VerticalAlignment="Top" 
                   Height="56" 
                   Width="187"/>
    </Grid>
</Page>
